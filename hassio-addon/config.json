{
  "name": "Tado° Smart Scheduler",
  "version": "1.0.0",
  "slug": "tado-scheduler",
  "description": "Advanced scheduling interface for Tado° smart heating devices using Home Assistant automations",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "application",
  "boot": "auto",
  "init": false,
  "ports": {
    "8080/tcp": 8080
  },
  "ports_description": {
    "8080/tcp": "Web interface"
  },
  "webui": "http://[HOST]:[PORT:8080]",
  "ingress": true,
  "ingress_port": 8080,
  "panel_icon": "mdi:calendar-clock",
  "panel_title": "Tado° Scheduler",
  "panel_admin": false,
  "hassio_api": true,
  "hassio_role": "default",
  "homeassistant_api": true,
  "host_network": false,
  "options": {
    "entity_prefix": "tado_scheduler",
    "log_level": "info",
    "auto_discover_zones": true,
    "schedule_backup": true
  },
  "schema": {
    "entity_prefix": "str",
    "log_level": "list(debug|info|warning|error)?",
    "auto_discover_zones": "bool",
    "schedule_backup": "bool"
  },
  "image": "ghcr.io/yourusername/tado-scheduler"
}
